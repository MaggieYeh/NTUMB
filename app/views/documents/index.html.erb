<div class="row">
  <div class="span3">
    <%= render partial: "shared/pagenav" %>
  </div>
  <div class="span9">
    <div class="tabbable">
      <ul class="nav nav-tabs">
        <% DocumentCategory.all.each_with_index do |c,i| %>
          <li <%= "class='active'" if i == 0 %>>
            <a href="#ann_<%= c.name %>" data-toggle="tab"><%= c.name %></a>
          </li>
        <% end %>
      </ul>
      <div class="tab-content">
        <% DocumentCategory.all.each_with_index do |c,i| %>
          <div class="tab-pane <%= 'active' if i == 0 %>" id="ann_<%= c.name %>">
            <% c.documents.each do |d| %>
              <a href="<%= document_path(d) %>">
                <h4><%= d.document_file_file_name %></h4>
              </a>
              <span><%= d.discription %></span>
              <span class="date-duration">
                <%= d.publish_date.strftime("%Y/%m/%d") %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div><!-- tab-content -->
    </div><!-- tabbable -->
  </div>
</div>

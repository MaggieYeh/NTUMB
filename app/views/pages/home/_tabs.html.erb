<ul class="nav nav-tabs" id="home-tabs">
  <% 
    tab_contents = []
    if I18n.locale == :"zh-TW"
      tab_contents << %Q{即時<br class="visible-980-1200"/>訊息}  \
                   << %Q{管院<br class="visible-980-1200"/>頻道}  \
                   << %Q{管院<br class="visible-980-1200"/>徵才}  \
                   << %Q{學生<br class="visible-980-1200"/>專區}
    else
      tab_contents << "News" << "Channel" << "Recruit" << "Students"
    end
  %>
    <li class="active">
      <a href="#announcements" data-toggle="tab"><%= tab_contents[0] %></a>
    </li>
    <li><a href="#youtube-channel" data-toggle="tab"><%= tab_contents[1] %></a></li>
    <li><a href="#recruiting" data-toggle="tab"><%= tab_contents[2] %></a></li>
    <li><a href="#students" data-toggle="tab"><%= tab_contents[3] %></a></li>
</ul>
<div class="tab-content well" id="home-tabs-content">
  <ul id="announcements" class="tab-pane unstyled active">
    <% @announcements.each do |a| %>
      <li>
        <a href="<%= announcement_path(a) %>">
          <span class="tab-item-published-time"><%= a.announce_date.to_s %></span>
          <span class="tab-item-title"><%= a.name %></span>
        </a>
      </li>
    <% end %>
  </ul>
  <ul id="youtube-channel" class="tab-pane unstyled">
    <% @videos.each do |v| %>
      <li>
        <a href="<%= html_escape v['video_url'] %>">
          <span class="video-thumb-wrapper">
            <span class="video-thumb">
              <span class="video-thumb-inner">
                <%= image_tag(v['thumb_url']) %>
              </span>
              <span class="duration"><%= v['duration'] %></span>
            </span>
          </span>
          <div class="video-info">
            <span class="video-title"><%= v['title'] %></span><br />
            <span class="video-stats">觀看次數: <%= "#{v['view_count']}" %><br />
              發佈日期: <%= "#{v['published_at']}" %></span>
          </div>
        </a>
      </li>
    <% end %>
  </ul>
  <ul id="recruiting" class="tab-pane unstyled">
    <% @jobs_announcements.each do |a| %>
      <li>
        <a href="<%= announcement_path(a) %>">
          <span class="tab-item-published-time"><%= a.announce_date.to_date.to_s %></span>
          <span class="tab-item-title"><%= a.name %></span>
        </a>
      </li>
    <% end %>
  </ul>
  <ul id="students" class="tab-pane unstyled">
    <% @student_announcements.each do |a| %>
      <li>
        <a href="<%= announcement_path(a) %>">
          <span class="tab-item-published-time"><%= a.announce_date.to_date.to_s %></span>
          <span class="tab-item-title"><%= a.name %></span>
        </a>
      </li>
    <% end %>
  </ul>
</div>

<!DOCTYPE html>
<html>
<head>
  <title>NTUMB</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<h1><%= link_to @current_department_name, @current_department_name.match(/management/i) ? @management_link : @current_department_link %></h1>
<%= render :partial => "pages/menu", :object => @menu %>

<%= yield %>
<div class="footer">
  <h2>系所連結</h2>
  <ol class="department_links">
    <% @department_names.each_with_index do |dname,i|  %>
      <% if i == 0 %>
        <li><%= link_to "Management", @management_link %></li>
      <% else %>
        <li><%= link_to dname, @all_departments_links.at(i) %></li>
      <% end %>
    <% end %>
  </ol>
</div>
</body>
</html>
